@model IEnumerable<RollerTest.WebUI.Models.WTTESTMODEL.WTTESTINFO>

@{
    ViewBag.Title = "CreateProject";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>试验项目</h2>
        <ol class="breadcrumb">
            <li>
                <a>试验项目</a>
            </li>
            <li class="active">
                <a>项目选取</a>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>EIS试验项目一览</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">预留</a>
                            </li>
                            <li>
                                <a href="#">预留</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th class="text-center" style="width:7%">
                                    委托单号
                                </th>
                                <th class="text-center" style="width:15%">
                                    试验名称
                                </th>
                                <th class="text-center" style="width:26%">
                                    试验标准
                                </th>
                                <th class="text-center" style="width:10%">
                                    标准选项
                                </th>

                                <th class="text-center" style="width:10%">
                                    产品名称
                                </th>
                                <th class="text-center" style="width:8%">
                                   产品图号
                                </th>
                                <th class="text-center" style="width:5%">
                                    番号
                                </th>
                                <th class="text-center" style="width:10%">
                                    产品型号
                                </th>
                                <th class="text-center" style="width:9%">操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SERIAL_NO)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NAME)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.STANDARD)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.STANDARD_OPTION)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PRODUCT_NAME)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PRODUCT_NO)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PRODUCT_GL_CODE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PRODUCT_TYPE_NO)
                                    </td>
                                    <td class="text-center" >
                                        <div>@Html.ActionLink("详细", "DetailInfo", new {  RollerProjectInfoID = item.ID})|@Html.ActionLink("添加", "Confirm", new { RollerProjectInfoID = item.ID })</div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                        }
                    }
                ]

            });



        });

    </script>
    }